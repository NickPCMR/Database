<div class="row">
    <div class="col-6 offset-3">
        <form action="/users/<%= locals.user.userID %>/edit" method="post" class="validated-form">
            <div class="mb-3">
                <h1>Edit User</h1>
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Email address</label>
                <input class="form-control" type="email" id="email" name="email" value="<%= locals.user.email %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="exercise">First name</label>
                <input class="form-control" type="text" id="first-name" name="firstName"  value="<%= locals.user.firstName %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="exercise">Last name</label>
                <input class="form-control" type="text" id="last-name" name="lastName" value="<%= locals.user.lastName %>" required>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
            <a class="btn btn-secondary" href="/users/<%= locals.user.userID %>">Cancel</a>
        </form>
    </div>
</div>
