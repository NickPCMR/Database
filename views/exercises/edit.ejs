<div class="row">
    <div class="col-6 offset-3">
        <form action="/exercises/1" method="put" class="validated-form">
            <div class="mb-3">
                <h1>Edit Exercise</h1>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" value="Bench Press" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="description">a lift or exercise in which a weight is raised by extending the arms upward while lying on a bench</textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Update exercise</button>
            </div>
        </form>
    </div>
</div>